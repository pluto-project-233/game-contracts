{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LobbyState",
  "type": "object",
  "required": ["roomId", "players"],
  "properties": {
    "roomId": { "type": "string" },
    "players": {
      "type": "array",
      "items": {
        "required": ["playerId", "ready"],
        "properties": {
          "playerId": { "type": "string" },
          "ready": { "type": "boolean" }
        }
      }
    }
  }
}
